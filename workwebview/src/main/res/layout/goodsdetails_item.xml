<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?actionBarSize"
        app:navigationIcon="@mipmap/ic_launcher_round"
        app:title="标题"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp">
            <RelativeLayout
                android:layout_width="312dp"
                android:layout_height="274dp">
                <com.recker.flybanner.FlyBanner
                    android:id="@+id/goodsContentPage_ViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.recker.flybanner.FlyBanner>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goodsContent_goods_Price"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="#ff00"
                    android:text="￥159"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/goodsContent_goods_yiShou"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="已售11298件"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/goodsContent_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="美克斯 (max)经典唇膏 子弹头口3g Chili 秀之色/小辣椒"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="重量"/>

                <TextView
                    android:id="@+id/goodsContent_goods_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1.85kg"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <!--商品详情-->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="商品详情"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="4dp"
                    android:background="#ff5e70"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/goodsContent_product_contentImg"
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="产品介绍"/>

            <TextView
                android:id="@+id/goodsContent_product_introductionText"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="魅可(max) 经典唇膏,子弹头型"/>

            <ImageView
                android:id="@+id/goodsContent_product_introductionImg"
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
